{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        },
        "json": {
            "()": "utils.log_main.MyJSONFormatter",
            "fmt_keys": {
                "level": "levelname",
                "message": "message",
                "timestamp": "timestamp",
                "logger": "name",
                "function": "funcName",
                "line": "lineno",
                "thread_name": "threadName"
            }
        },
        "html": {
            "()": "utils.log_main.MyHTMLFormatter",
            "fmt_keys": {
                "level": "levelname",
                "message": "message",
                "timestamp": "timestamp"
            }
        }
    },

    "handlers": {
        "main_handler": {
            "class": "logging.FileHandler",
            "filename": "logs/debate_main.log",
            "formatter": "json",
            "filters": ["main_debate_filter"],
            "level": "INFO"
        },
        "debug_handler": {
            "class": "logging.FileHandler",
            "filename": "logs/debate_debug.log",
            "formatter": "json",
            "level": "DEBUG"
        },
        "persuador_helper_handler": {
            "class": "logging.FileHandler",
            "filename": "logs/persuador_helper_communication.log",
            "formatter": "json",
            "filters": ["persuador_helper_filter"],
            "level": "DEBUG"
        },
        // "queue_handler": {
        //     "class": "logging.FileHandler",
        //     "handlers": [
        //         "main_handler",
        //         "debug_handler",
        //         "persuador_helper_handler"
        //     ],
        //     "respect_handler_level": true
        // }
    },
    "loggers": {
        "debate_logger": {
            "handlers": ["main_handler", "debug_handler", "persuador_helper_handler"],
            "level": "DEBUG",
            "propagate": false
        }
    },
    "root": {
        "handlers": ["debug_handler"],
        "level": "INFO"
    }
}
